<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="edit_text_style_default.with_top_margin">
        <item name="android:layout_marginTop">@dimen/size_double</item>
    </style>

    <style name="edit_text_style_default">
        <item name="android:importantForAutofill" tools:targetApi="o">no</item>
        <item name="android:textAlignment">center</item>
        <item name="android:layout_height">@dimen/bar_height_default</item>
        <item name="android:textSize">@dimen/text_size_default</item>
    </style>

    <style name="edit_text_theme_default">
        <item name="colorAccent">@color/primary</item>
    </style>

    <style name="text_style_default">
        <item name="color">@android:color/darker_gray</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_size_default</item>
    </style>

    <style name="text_style_default.with_padding">
        <item name="android:padding">@dimen/size_default</item>
    </style>

    <style name="text_style_default.with_top_margin">
        <item name="android:layout_marginTop">@dimen/size_double</item>
    </style>

    <style name="text_style_default.centered">
        <item name="android:layout_width">match_parent</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="card_view_style_default">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_margin">@dimen/size_default</item>
    </style>

    <style name="card_view_layout_style_default">
        <item name="android:orientation">vertical</item>
        <item name="android:layout_margin">@dimen/size_default</item>
    </style>

    <style name="text_style_header">
        <item name="android:textColor">@color/primary</item>
        <item name="android:textSize">@dimen/text_size_big</item>
        <item name="android:padding">@dimen/size_default</item>
    </style>
</resources>